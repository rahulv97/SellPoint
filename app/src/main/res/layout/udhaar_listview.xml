<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/list_stroke"
    android:layout_margin="20dp"
    android:padding="15dp"
    android:layout_height="wrap_content"
    android:id="@+id/item">

    <LinearLayout
        android:layout_toLeftOf="@id/cardImage"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/personName"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abc Xyz"
            android:textSize="24dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/returnDate"
            android:textColor="@color/white"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return Date: 26 Nov 2024"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/creationDate"
            android:textColor="@color/white"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entry Date: 26 Nov 2024"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/prodPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â‚¹50000"
            android:textSize="24dp"
            android:textColor="#FD5A0D"
            android:textStyle="bold"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="500dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/profImg"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/user_profile"/>
    </androidx.cardview.widget.CardView>



</RelativeLayout>