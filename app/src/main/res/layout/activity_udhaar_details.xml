<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sellpointbg"
    tools:context=".activities.UdhaarDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/back_btn"/>
        <TextView
            android:id="@+id/purchaseHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Udhaar Details"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="18dp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Udhaar Details"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etPersonName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/et_bg"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                android:hint="Person Name"
                android:inputType="textPersonName"
                android:paddingHorizontal="15dp"/>

            <EditText
                android:id="@+id/etAmount"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/et_bg"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                android:hint="Borrowing Amount (â‚¹)"
                android:paddingHorizontal="15dp"/>

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/et_bg"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                android:hint="Description"
                android:inputType="text"
                android:paddingHorizontal="15dp"/>

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/et_bg"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                android:inputType="text"
                android:hint="Address"
                android:paddingHorizontal="15dp"/>

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/et_bg"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                android:inputType="number"
                android:hint="Mobile"
                android:paddingHorizontal="15dp"/>

            <TextView
                android:id="@+id/returnDate"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/et_bg"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                android:text="Return Date"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:paddingHorizontal="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Person Image (optional)"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/list_stroke">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_centerInParent="true"
                    android:text="Select Photo"
                    android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/person_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Proof (optional)"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/list_stroke">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_centerInParent="true"
                    android:text="Select Photo"
                    android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/id_proof"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

            </RelativeLayout>

            <Switch
                android:id="@+id/paidSwtich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Is Paid: "
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submitBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:text="Update"
                android:textColor="@color/white"
                android:background="@drawable/et_bg"
                android:backgroundTint="#6D0000"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>